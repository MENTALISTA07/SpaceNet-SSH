fun_bar() {
    comando[0]="$1"
    comando[1]="$2"
    (
        [[ -e $HOME/fim ]] && rm $HOME/fim
        ${comando[0]} -y >/dev/null 2>&1
        ${comando[1]} -y >/dev/null 2>&1
        touch $HOME/fim
    ) >/dev/null 2>&1 &
    tput civis
    echo -ne "\033[0;37mâª\033[0;34mAGUARDE \033[1;37m> \033[1;32mâž "
    while true; do
        for ((i = 0; i < 13; i++)); do
            echo -ne "\033[0;36mâ–“"
            sleep 0.3s
        done
        [[ -e $HOME/fim ]] && rm $HOME/fim && break
        echo -e "\033[1;37mâŸ©"
        sleep 1s
        tput cuu1
        tput dl1
        echo -ne "\033[0;37mâª\033[0;34mAGUARDE \033[1;37m> \033[1;37mâŸ¨"
    done
    echo -e "\033[0;34m]\033[1;37m -\033[1;32m OK !\033[1;37m"
    tput cnorm
}
function verif_key() {
